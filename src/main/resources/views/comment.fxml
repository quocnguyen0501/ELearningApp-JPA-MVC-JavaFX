<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CommentController">
   <children>
      <HBox fx:id="commentContainer" alignment="CENTER" prefHeight="119.0" prefWidth="1120.0" spacing="10.0" style="-fx-background-color: #ffff;">
         <children>
            <ImageView fx:id="imgProfile" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/images/avatar/default/male.png" />
               </image>
            </ImageView>
            <VBox prefHeight="62.0" prefWidth="1030.0" spacing="10.0">
               <children>
                  <Label fx:id="name" prefHeight="17.0" prefWidth="809.0" text="Name" textFill="#3e0ddd">
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Label fx:id="content" prefHeight="71.0" prefWidth="1030.0" style="-fx-background-color: #eeeeee; -fx-border-radius: 30; -fx-background-radius: 30;" text="Content">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
                  <Label fx:id="time" prefHeight="17.0" prefWidth="340.0" text="time" textFill="#bdbdbd">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
